SUBSYSTEM!="net", GOTO="nm_unmanaged_lxd_end"
ACTION!="add|change", GOTO="nm_unmanaged_lxd_end"

ENV{INTERFACE}=="lxdbr[0-9]*", ENV{NM_UNMANAGED}="1"

LABEL="nm_unmanaged_lxd_end"
